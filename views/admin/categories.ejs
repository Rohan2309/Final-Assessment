<%- include("../partials/header") %>

<style>
  /* Pastel Theme */
  body {
    background: linear-gradient(to right, #fdfbfb, #ebedee);
  }

  .page-title {
    font-weight: 600;
    color: #4b5563;
  }

  .btn-pastel-green {
    background-color: #b1e5c1;
    color: #2f5135;
    border: none;
    transition: 0.2s ease-in-out;
  }
  .btn-pastel-green:hover {
    background-color: #9ddcaf;
    color: #244628;
  }

  .btn-pastel-yellow {
    background-color: #fde4a3;
    color: #7a5714;
    border: none;
  }
  .btn-pastel-yellow:hover {
    background-color: #fcd88a;
  }

  .btn-pastel-red {
    background-color: #f4b6c2;
    color: #7b2d3f;
    border: none;
  }
  .btn-pastel-red:hover {
    background-color: #ee9aa9;
  }

  .pastel-table {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0px 3px 8px rgba(0,0,0,0.05);
  }

  .pastel-table thead {
    background-color: #d8e2dc;
    color: #3a3a3a;
  }

  .pastel-row:hover {
    background-color: #f7f5f2;
  }
</style>

<div class="container py-4">
    
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title">üåø Categories</h2>
    <a href="/admin/categories/create" class="btn btn-pastel-green px-4 py-2 rounded-pill fw-bold">
      + Add Category
    </a>
  </div>

  <div class="table-responsive pastel-table">
    <table class="table table-bordered m-0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Slug</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% categories.forEach(c => { %>
          <tr class="pastel-row">
            <td class="align-middle"><%= c.name %></td>
            <td class="align-middle"><%= c.slug %></td>

            <td class="text-center align-middle">
              <a href="/admin/categories/<%= c._id %>/edit" class="btn btn-pastel-yellow btn-sm rounded-pill px-3 me-2">
                ‚úèÔ∏è Edit
              </a>

              <form action="/admin/categories/<%= c._id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-pastel-red btn-sm rounded-pill px-3">
                  üóëÔ∏è Delete
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
      
    </table>
  </div>

</div>

<%- include("../partials/footer") %>
