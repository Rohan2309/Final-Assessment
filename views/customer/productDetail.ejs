<%- include("../partials/header") %>

<style>
  body {
    background: #f8fafc; /* Soft gray pastel */
  }

  .detail-card {
    background: #ffffff;
    border-radius: 18px;
    padding: 25px;
    border: 1px solid #e2e8f0;
    box-shadow: 0 4px 24px rgba(0,0,0,0.06);
  }

  .product-image {
    border-radius: 18px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    border: 1px solid #e2e8f0;
  }

  h2 {
    color: #334155;
    font-weight: 700;
  }

  h5 {
    color: #64748b;
    font-weight: 600;
  }

  p {
    color: #475569;
    font-size: 1.05rem;
    line-height: 1.6;
  }

  .btn-secondary {
    background: #fca5a5; /* pastel soft red */
    border: none;
    padding: 10px 18px;
    border-radius: 12px;
    color: #fff;
    font-weight: 600;
  }

  .btn-secondary:hover {
    background: #f87171;
  }
</style>

<div class="row justify-content-center mt-4">
  <div class="col-md-10 detail-card">

    <div class="row align-items-center">
      
      <!-- Image -->
      <div class="col-md-6 mb-4">
        <img 
          src="/<%= product.image %>" 
          class="img-fluid product-image"
          style="height:380px; object-fit:cover; width:100%;"
        >
      </div>

      <!-- Product Info -->
      <div class="col-md-6">
        <h2><%= product.name %></h2>
        <h5 class="mb-3">Category: <%= product.category?.name %></h5>

        <p><%= product.description %></p>

        <a href="/" class="btn btn-secondary mt-3">Back</a>
      </div>

    </div>

  </div>
</div>

<%- include("../partials/footer") %>
